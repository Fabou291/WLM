{
    "name": "wlm_back",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "node ace serve --watch",
        "build": "node ace build --production",
        "start": "node server.js",
        "lint": "eslint . --ext=.ts",
        "format": "prettier --write .",
        "db:init": "node ace db:init",
        "doc:generate": "swagger-jsdoc -d ./docs/swagger/definition.json ./docs/swagger/**/*.yaml -o ./public/api/swagger-spec.yaml"
    },
    "eslintConfig": {
        "extends": [
            "plugin:adonis/typescriptApp",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error"
            ]
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "prettier": {
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true,
        "useTabs": false,
        "quoteProps": "consistent",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 100
    },
    "devDependencies": {
        "@adonisjs/assembler": "^5.6.2",
        "@japa/preset-adonis": "^1.0.15",
        "@japa/runner": "^2.0.7",
        "@types/uuid": "^8.3.4",
        "adonis-preset-ts": "^2.1.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-adonis": "^2.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "pino-pretty": "^7.6.1",
        "prettier": "^2.6.2",
        "typescript": "~4.6",
        "youch": "^3.2.0",
        "youch-terminal": "^2.1.3"
    },
    "dependencies": {
        "@adonisjs/auth": "^8.1.0",
        "@adonisjs/bouncer": "^2.2.7",
        "@adonisjs/core": "^5.7.6",
        "@adonisjs/lucid": "^17.2.0",
        "@adonisjs/mail": "^8.0.1",
        "@adonisjs/repl": "^3.1.10",
        "@adonisjs/session": "^6.2.2",
        "@types/socket.io": "^3.0.2",
        "@types/swagger-jsdoc": "^6.0.1",
        "luxon": "^2.4.0",
        "pg": "^8.7.3",
        "phc-argon2": "^1.1.3",
        "proxy-addr": "^2.0.7",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^4.5.0",
        "source-map-support": "^0.5.21",
        "swagger-jsdoc": "^6.2.1",
        "uuid": "^8.3.2"
    }
}
